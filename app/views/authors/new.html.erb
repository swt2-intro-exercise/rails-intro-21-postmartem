<h1>New Author</h1>
<%= form_with scope: :author, url: authors_path, local: true do |form| %>

  <% if @author.errors.any? %>
    <p>
    <%= form.label :"Nope" %><br>
    <%= form.label :"You can't submit authors without a last name" %>
  </p>
  <div id="error_explanation">
      <h2>
        <%= pluralize(@author.errors.count, "error") %> prohibited
        this article from being saved:
      </h2>
      <ul>
        <% @author.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>

  <% else %>
  <p>
    <%= form.label :"First Name" %><br>
    <%= form.text_field :first_name %>
  </p>
 
  <p>
    <%= form.label :"Last Name" %><br>
    <%= form.text_field :last_name %>
  </p>
 
  <p>
    <%= form.label :"Homepage" %><br>
    <%= form.text_field :homepage %>
  </p>

  <p>
    <%= form.submit %>
  </p>
  <% end %>
    
  
<% end %>